{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",         // <--- aquÃ­
    "paths": {
      "@/*": ["*"]             // <--- permite usar @/ para rutas desde src
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
